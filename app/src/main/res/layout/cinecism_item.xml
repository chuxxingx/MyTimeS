<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_discuss_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="魔法师的美国梦"
                android:textColor="@android:color/background_dark"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_discuss_content"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:lines="2"
                android:ellipsize="end"
                android:text=" 没疯没vrkfkmgrjfmf"
                android:textColor="#55000000"
                android:textSize="13sp"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.android.volley.toolbox.NetworkImageView
                    android:id="@+id/iv_discuss_userimage"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/tab_home02" />

                <TextView
                    android:id="@+id/tv_discuss_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="方玉楠"
                    android:textColor="#000000"
                    android:textSize="13sp" />
                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="《"/>

                <TextView
                    android:id="@+id/tv_discuss_cinename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="极速风流"
                    android:maxEms="6"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@android:color/black"
                    android:textSize="13sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="》"/>

                <TextView
                    android:id="@+id/tv_dis_dis_item_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#669E0E"
                    android:maxEms="3"
                    android:layout_marginLeft="2dp"
                    android:text="7.6"/>
            </LinearLayout>
        </LinearLayout>

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/iv_discuss_cine"
            android:layout_width="75dp"
            android:layout_height="95dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/tab_home02"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>