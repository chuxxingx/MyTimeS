<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">



    <TextView

        android:id="@+id/tv_global_item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@drawable/left_ball"
        android:gravity="center"
         />

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/neiv_global_item"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_alignTop="@id/tv_global_item_num"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/tv_global_item_num"
        android:src="@drawable/img_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/tv_global_item_num"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/neiv_global_item"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_global_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="星球大战:原力觉醒"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_global_item_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="#73db1e"
                    android:text="7.7"
                    android:singleLine="true"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_global_item_nameen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxEms="18"
                android:singleLine="true"
                android:textColor="#55000000"
                android:text="Star Wars: The Force Awakens"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_global_item_week"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="一周票房347000"
                android:singleLine="true"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_global_item_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="累计票房34700"
                android:singleLine="true"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_global_item_ticket"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/neiv_global_item"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/balance_bg"
        android:text="购票"
        android:textSize="15sp" />

</RelativeLayout>